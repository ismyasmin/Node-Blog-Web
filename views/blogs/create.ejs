<!DOCTYPE html>
<%- include('../partials/head.ejs') %>
<html lang="en">
<body>
  <%- include('../partials/nav.ejs') %>

  <div class="create-blog content">  <!--when clicked on submit, gonna send a post request to the /blogs url-->
    <form action="/blogs" method="POST">  <!-- where the request will be sent to -->
      <label for="title">Blog title:</label>
      <input type="text" id="title" name = "title" required>

      <label for="snippet">Blog snippet:</label>
      <input type="text" id="snippet" name = "snippet" required>

      <label for="body">Blog body:</label>
      <textarea id="body" required name="body"></textarea>
      <!--add name attribute to send the form data & attach to the body of the post request to access that to the server -->
      <button>Submit</button>
    </form>
  </div>
  <%- include('../partials/footer.ejs') %>
</body>
</html>
